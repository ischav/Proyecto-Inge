@model ProyectoInge1.Models.ModeloProyecto
@{
    ViewBag.Title = "Realizar solicitud de cambio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fileUpload {
        position: relative;
        overflow: hidden;
        margin: 15px;
    }

     .fileUpload input.upload {
            position: absolute;
            top: 0;
            right: 0;
            margin: 0;
            padding: 0;
            font-size: 20px;
            cursor: pointer;
            opacity: 0;
            filter: alpha(opacity=0);
        }

    .row {
        padding-bottom: 1em;
    }

    img {
        width: auto;
        max-width: 279px;
        height: auto;
        max-height: 279px;
    }

    .required:after {
        content: " *";
        font-weight: bold;
        color: red;
    }
</style>

<script>
    var id;
    var idProyecto;

    function funcionCancelar() {
        var respuesta = confirm('¿Confirma que no desea realizar una solicitud de cambios?');
        if (respuesta == true) {
            var url = '@Url.Action("CrearSolicitud", "ModuloCambios")';
            window.location.href = url;
        }
    }

    window.onload = function () {
        $("input").prop('disabled', false).trigger("click");
        $('select').prop('disabled', false).trigger("click");
        $("#descripcion *").prop("disabled", false).trigger("click");
        $('#Proyecto').prop('disabled', true).trigger("click");
        $('#Id').prop('disabled', true).trigger("click");
    }

    function cambio() {
        var input = document.getElementById("uploadBtn");
        var fReader = new FileReader();
        fReader.readAsDataURL(input.files[0]);
        fReader.onloadend = function (event) {
        var img = document.getElementById("RuPic");
        img.src = event.target.result;
        document.getElementById("rutaImagen").value = event.target.result;
        }
    }
</script>

    <h2>Solicitar Cambio</h2>
    @if (Model.cambiosGuardados == 1)
            {
        <div style="text-align: right; width: 100%; color:limegreen; font-weight:bold;">
            <p>Se ha enviado una solicitud exitosamente!</p>
        </div>
    }
    else if (Model.cambiosGuardados == 2)
    {
        <div style="text-align: right; width: 100%; color:red; font-weight:bold;">
            <p>Ha ocurrido un error al realizar la solicitud!</p>
        </div>
    }

