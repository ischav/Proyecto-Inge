@using Microsoft.AspNet.Identity;
@using ProyectoInge1.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Administración de Requerimientos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style> 
        body {background-color: white;}
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
           @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
           {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        Entities baseDatos = new Entities();
                        ApplicationDbContext context = new ApplicationDbContext();
                        ModeloIntermedio modelo = new ModeloIntermedio();
                        modelo.usuarioActualId = System.Web.HttpContext.Current.User.Identity.GetUserId();
                        string rolId = context.Users.Find(modelo.usuarioActualId).Roles.First().RoleId;
                        if (rolId == "01Admin")
                        {
                            <li>@Html.ActionLink("Usuarios", "Index", "ModuloUsuarios")</li>
                        }
                        <li>@Html.ActionLink("Privilegios", "Index", "ModuloSeguridad")</li>
                        <li>@Html.ActionLink("Requerimientos", "Index", "ModuloRequerimientos")</li>
                    }
                    <li>@Html.ActionLink("Contáctenos", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li> @Html.ActionLink("Mi cuenta", "Informacion", "ModuloUsuarios") </li>
                        @Html.AntiForgeryToken()
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Salir </a></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    }
                </ul>
            </div>
           }
        </div>
           
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Administración de Requerimientos - Todos los derechos reservados.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
